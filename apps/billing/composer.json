{
    "name": "tomcant/bike-rides-api",
    "description": "Bike Rides API",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-pdo": "*",
        "bike-rides/foundation": "dev-main",
        "bike-rides/shared-kernel": "dev-main",
        "bref/bref": "^2.3.11",
        "bref/secrets-loader": "^1.1",
        "bref/symfony-bridge": "^1.0.3",
        "bref/symfony-messenger": "^1.3.3",
        "doctrine/doctrine-bundle": "^2.13.1",
        "doctrine/doctrine-migrations-bundle": "^3.3.1",
        "moneyphp/money": "^4.6",
        "nelmio/cors-bundle": "^2.5",
        "opis/json-schema": "^2.3",
        "symfony/console": "7.2.*",
        "symfony/doctrine-messenger": "7.2.*",
        "symfony/flex": "^2.4.7",
        "symfony/framework-bundle": "7.2.*",
        "symfony/messenger": "7.2.*",
        "symfony/monolog-bundle": "^3.10",
        "symfony/runtime": "7.2.*",
        "symfony/uid": "7.2.*",
        "symfony/yaml": "7.2.*"
    },
    "require-dev": {
        "ergebnis/php-cs-fixer-config": "^6.39",
        "phpstan/phpstan": "^2.0.4",
        "phpunit/phpunit": "^11.5.1",
        "qossmic/deptrac": "^2.0",
        "symfony/browser-kit": "7.2.*",
        "symfony/css-selector": "7.2.*"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../packages/*"
        }
    ],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "lint": [
            "@composer validate --strict",
            "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --dry-run --diff",
            "deptrac",
            "phpstan"
        ],
        "format": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix",
        "test": "phpunit --log-junit /var/reports/phpunit.xml --order-by=random"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "7.2.*"
        }
    }
}
